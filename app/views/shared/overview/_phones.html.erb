<div class="field-group">
  <h5 class="field-group-head">Phones</h5>
  <% primaries = entity.phones.primaries %>
  <% if primaries.empty? %>
  <p class="field empty"><span class="value">--</span></p>
  <% else %>
  <ul class="field-list">
    <% primaries.group_by(&:location).each do |location, phones| %>
    <li class="item">
      <dl class="field">
        <dt class="field-label"><% location %></dt>
        <% phones.each do |phone| %>
        <dd class="value<%= " favorite" if phone.is_favorite %>"><%= phone.display_phone %></dd>
        <% end %>
      </dl>
    </li>
    <% end %>
  </ul>  
  <% end %>
</div>