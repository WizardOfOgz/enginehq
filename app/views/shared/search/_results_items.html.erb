<% if results && results.size > 0 %>
<% screen = params["#{params.detect{|k,v| v == "Search" || v == "Find"}.first}_screen"] %>
<% results.each do |result| %>
<li class="item result">
  <h4 class="result-title" tabIndex="0"><% if params[:search_global].nil? %><%= result.full_name %><% else %><a href="/<%= screen %>/<%= result.id %>/overview"><%= result.full_name %></a><% end %></h4>
  <% if params[:search_global].nil? %><input class="add" type="submit" value="add" name="search_add[<%= screen %>][<%= result.id %>]" /><% end %>
  <% if [Advisor, PolicyHolder, Policy, Contract, License, Product].include?(result.class) %>
  <%= render :partial => "/shared/search/#{result.class.table_name}/expanded_details", :locals => {:entity => result} %>
  <% end %>
</li>
<% end %>
<% if @policy_holders && controller_name == "policies" && action_name != "index" %>
<li class="item">No Results Found <input class="action" type="submit" name="add_policy_holder" value="Add" /></li>
<% end %>
